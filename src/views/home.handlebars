<h1>Products</h1>

<div>
    <h1>Hola, {{user.name}}</h1>
    <p>Correo: {{user.email}}</p>
</div>

<div id="controles">
  <form action="/" method="GET">
    <div id="labels">
      <label for="limit">Cantidad de productos:</label>
      <select name="limit" id="limit">
        <option value="1">1</option>
        <option value="3">3</option>
        <option value="5">5</option>
      </select>

      <label for="sort">Ordenar por:</label>
      <select name="sort" id="sort">
        <option value="1">Menor precio</option>
        <option value="-1">Mayor precio</option>
      </select>
    </div>
    <br/>
    <button type="submit">Aplicar cambios</button>
  </form>
</div>
<br/>
<div id="contenedorPricipal">
  <div id="product-container">
    {{#each products}}
      <div>
        <div class="cardContainer">
          <h2>{{title}}</h2>
          <p class="category">{{category}}</p>
          <div class="imgConteiner">
       
          </div>
          <p class="description">{{description}}</p>
          <p class="price">$ {{price}}</p>
          <button id="{{_id}}" class="add-to-cart-button">Agregar al carrito</button>
        </div>
      </div>
    {{/each}}
  </div>
<br/><br/>
  <div id="pageHandler">
    {{#if hasPrevPage}}
      <a href="/?page={{prevPage}}"><button> Anterior </button></a>
    {{/if}}
   
    <p>{{page}}</p>
    
    {{#if hasNextPage}}
      <a href="/?page={{nextPage}}"><button> Siguiente </button></a>
    {{/if}}
  </div>

</div>


<script src="/js/productHandler.js"></script>
